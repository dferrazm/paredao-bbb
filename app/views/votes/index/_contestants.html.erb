<% @contestants.each do |contestant| %>
  <%= content_tag :div, id: "contestant_#{contestant.id}_container", class: 'contestant contestant-container' do %>
    <%= content_tag :h4, contestant.name %>
    <%= contestant.avatar %>
    <%= contestant.call_for_action %>

    <%= radio_button_tag :contestant, contestant.id, false, class: 'contestant-input' %>
  <% end %>
<% end %>
