<h1><%= t '.title' %></h1>

<table>
  <thead>
    <tr>
      <th><%= t '.avatar' %></th>
      <th><%= t '.name' %></th>
      <th><%= t '.actions' %></th>
    </tr>
  </thead>

  <tbody>
    <% @contestants.each do |contestant| %>
      <tr>
        <td class="image"><%= image_tag contestant.avatar_path %></td>
        <td><%= contestant.name %></td>
        <td><%= link_to t('.destroy'), admin_contestant_path(contestant), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_admin_contestant_path %>
